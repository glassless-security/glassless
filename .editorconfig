# EditorConfig helps maintain consistent coding styles
# https://editorconfig.org

root = true

# Default settings for all files
[*]
charset = utf-8
end_of_line = lf
indent_style = space
insert_final_newline = true
trim_trailing_whitespace = true

# Java source files
[*.java]
indent_size = 3
max_line_length = 120

# XML files (pom.xml, etc.)
[*.xml]
indent_size = 3

# Properties files
[*.properties]
indent_size = 4

# YAML files
[*.{yml,yaml}]
indent_size = 2

# JSON files
[*.json]
indent_size = 2

# Markdown files
[*.md]
indent_size = 2
trim_trailing_whitespace = false

# Shell scripts
[*.sh]
indent_size = 4

# Batch files (Windows)
[*.{bat,cmd}]
end_of_line = crlf
indent_size = 4

# Makefiles require tabs
[Makefile]
indent_style = tab

# Git configuration files
[.git*]
indent_size = 4

# Module info
[module-info.java]
indent_size = 3
